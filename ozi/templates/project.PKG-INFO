Metadata-Version: 2.1
Name: {{ project.name }}
Version: {version}
Summary: {{ project.summary }}
Classifier: Development Status :: {{ project.status }}
Classifier: Intended Audience :: {{ project.audience }}
Classifier: License :: {{ project.license }}
Classifier: Natural Language :: {{ project.language }}
Classifier: Programming Language :: Python :: {{ ozi.py_major }} :: Only
Classifier: Programming Language :: Python :: {{ ozi.py_major }}.{{ ozi.py_security }}
Classifier: Programming Language :: Python :: {{ ozi.py_major }}.{{ ozi.py_bugfix2 }}
Classifier: Programming Language :: Python :: {{ ozi.py_major }}.{{ ozi.py_bugfix1 }}
{%- for implementation in ozi.py_implementations %}
Classifier: Programming Language :: Python :: Implementation :: {{ implementation }}
{%- endfor %}
{%- for topic in project.topic %}
Classifier: Topic :: {{ topic }}
{%- endfor %}
{%- if project.typing != '' %}
Classifier: Typing :: {{ project.typing }}
{%- endif %}
{%- if project.framework != '' %}
Classifier: Framework :: {{ project.framework }}
{%- endif %}
{%- if project.environment != '' %}
Classifier: Environment :: {{ project.environment }}
{%- endif %}
Project-URL: Homepage, {{ project.homepage }}
Description-Content-Type: text/x-rst

.. OZI
  Classifier: License-Expression :: {{ project.license_expression }}
  Classifier: License-File :: {{ project.license_file }}

